<script type="text/javascript">
	$(function(){
		$('.show_show').click(function (){
			var thisdiv=$(this);
			$.post("./index.php?a=news&m=change_show",{id:$(this).attr('value')},function(data){
				if(data.say=='ok'){
				//	alert(data.is_show);
					thisdiv.attr('class','show_show');
					thisdiv.addClass('show_show'+data.is_show);
				
				}
			},'json');
		});
		$('.show_order').click(function (){
			$(this).hide().next().show();
			$(this).next().selectRange('100','100');
		});
		$('.show_order_text').blur(function(){
			var thisdiv=$(this);
			var val=$(this).attr('value');
			var id=$(this).prev().attr('value')
			if(val!=null){
				$.post("./index.php?a=news&m=change_order",{id:id,val:val},function(data){
					if(data.say=='ok'){
						thisdiv.prev().html(data.val);
						thisdiv.attr('value',data.val);
					}
				},'json');
			}
			$(this).hide().prev().show();
		});
	});
	$.fn.selectRange = function(start, end) {
		return this.each(function() {
			if (this.setSelectionRange) {
				this.focus();
				this.setSelectionRange(start, end);
			} else if (this.createTextRange) {
				var range = this.createTextRange();
				range.collapse(true);
				range.moveEnd('character', end);
				range.moveStart('character', start);
				range.select();
			}
		});
	};
</script>
</head>

